# OpenAI — used for STT (Whisper)
OPENAI_API_KEY=sk-...

# Anthropic — used for chat (Haiku)
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs — used for TTS (Aria)
ELEVENLABS_API_KEY=sk_...

# Optional overrides
# ELEVENLABS_VOICE_ID=9BWtsMINqrJLrRacOk9x   # default: Aria
# ELEVENLABS_MODEL=eleven_turbo_v2_5          # default: turbo v2.5

# Chat provider for /talk: "anthropic" (default) or "openai"
SPEECH_CHAT_PROVIDER=anthropic

# Optional model overrides
# SPEECH_ANTHROPIC_MODEL=claude-haiku-4-5-20251001
# SPEECH_OPENAI_MODEL=gpt-4o-mini
# SPEECH_STT_MODEL=gpt-4o-mini-transcribe

# LangSmith (optional — for tracing)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=
# LANGCHAIN_PROJECT=turtle-talk
